@page "{token}"
@model MyRazorApp.Pages.ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <style>
        .reset-password-container {
            max-width: 500px;
            margin: auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .form-group {
            margin-bottom: 1rem;
        }
        .text-danger {
            color: #dc3545;
        }
        .btn-reset {
            margin-top: 1rem;
        }
    </style>
</head>
<body>
    <div class="reset-password-container">
        <h2 class="text-center">@ViewData["Title"]</h2>

        <!-- Reset Password Form -->
        <form method="post">
            <input type="hidden" asp-for="Token" />

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div> <!-- Display validation errors here -->

            <div class="form-group">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" type="password" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span> <!-- Validation message for New Password -->
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span> <!-- Validation message for Confirm Password -->
            </div>

            <button type="submit" class="btn btn-primary btn-block btn-reset">Reset Password</button>
        </form>

        @if (ModelState.Values.Any(v => v.Errors.Count > 0))
        {
            <p class="text-danger text-center">There were errors resetting your password. Please check your input and try again.</p>
        }
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
